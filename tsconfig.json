{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
}